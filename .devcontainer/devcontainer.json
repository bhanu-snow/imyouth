{
  "name": "Desgy Next.js Dev - iumlyouth",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",  // Node 20 for Next.js
  "features": {
    "ghcr.io/devcontainers/features/node:1": {}
  },
  "postCreateCommand": "npm install",  // Auto-install deps on container start
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss"  // For Tailwind IntelliSense
      ]
    }
  },
  "forwardPorts": [3000]  // Expose Next.js port
}